<h1>Topics</h1>

<div class="row">
	<div class="col-md-8">
		<% @topics.each do |t| %>
			<div class="media">
				<div class="media-body">
					<h4 class="media-heading">
						<%= link_to t.name, t %>
					</h4>
					<small>
						<%= t.description %>
					</small>
				</div>
			</div>
		<% end %>		
	</div>
	<% if user_is_authorized_for_topics? %>
		<div class="col-md-4">
			<%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
		</div>
	<% end %>
</div>